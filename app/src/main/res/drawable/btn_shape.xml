<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">>
    <item>
        <shape android:shape="rectangle">
            <solid android:color="#37000000" /> <!-- Shadow color -->
            <corners android:radius="@dimen/_50dp" /> <!-- Adjust the radius as needed -->
        </shape>
    </item>
    <!-- Background -->
    <item android:bottom="2dp">
        <shape android:shape="rectangle">
            <solid android:color="@color/primary_color" /> <!-- Background color -->
            <corners android:radius="50dp" /> <!-- Adjust the radius as needed -->
        </shape>
    </item>
</layer-list>


